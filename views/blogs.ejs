<script defer>
    const blogs = document.querySelector('#blogs');
    const categories = document.getElementsByClassName('category');

    const colorCategory = {
        'Technology': '#00E4BA',
        'Science': '#0086FD',
        'Sports': '#FF7D5C',
        'Entertainment': '#F9F871',
        'Health': '#FFBF4C',
        'Other': '#D11AB8'
    }

    let allBlogs = [];

    fetch('/loadBlogs')
        .then(res => res.json())
        .then(data => {
            allBlogs = data;
            renderBlogs();
        })
        .catch(err => console.log(err));

    const renderBlogs = () => {
        blogs.innerHTML = "";
        let selectedCategories = [];
        Array.from(categories).forEach(ele => {
            if (ele.classList.contains('active')) {
                selectedCategories.push(ele.classList[1]);
            }
        });
        console.log("Selected categories: ", selectedCategories);

        allBlogs.forEach(ele => {
            console.log(ele.category);
            if (selectedCategories.includes(ele.category)) {
                let blog = `
                    <div class="blog" style="border-right: 10px solid ${colorCategory[ele.category]};">
                        <div class="user-detail">
                            <img src="${ele.profile}" onerror="this.src='images/animals/female-lion.svg'" alt="Profile pic"
                                width="80px" height="80px" style="border-radius: 50%; display: block;">
                            <div class="user-text">
                                <h2>${ele.username || " "}</h2>
                                <p style="color: #808080;">name@email.com</p>
                            </div>
                        </div>
                        <div class="blog-detail">
                            <h3>${ele.title}</h3>
                            <p>${ele.description}</p>
                        </div>
                        <div class="like">
                            <i class="fas fa-heart"></i>
                            <p style="margin: 0 1em;">${ele.likes}%> </p>
                        </div>
                    </div>
                    `;
                blogs.innerHTML += blog;

            }

        })
    }

    Array.from(categories).forEach((category) => {
        category.addEventListener('click', (e) => {
            e.target.classList.toggle('active');
            console.log("click");
            renderBlogs();
        })
    })

    // console.log(blogs);
</script>

