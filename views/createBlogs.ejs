<%- include('partials/header'); -%>

<div class="create-blog content">
    <form action="/createblog" method="POST">
        <label for="title">Title<span style="color: lightcoral;">*</span></label>
        <input type="text" name="title" id="title" placeholder="Math is easy" required>

        <label for="description">Description<span style="color: lightcoral;">*</span></label>
        <textarea name="description" id="description" cols="48" rows="10"
            placeholder="Roses are red, violets are blue, I know basic math, one plus one is two" required
            style="resize: none;text-align: left;font-size: large;border-radius: 3%;padding: 0.5em;" spellcheck="true"></textarea>

        <div class="blog-category">
            <label for="category">Category</label>
            <select name="category" id="category" required style="width: 95%; height: 30px; border-radius: 3px;">
                <option value="">Select a category</option>
                <option value="Technology">Technology</option>
                <option value="Science">Science</option>
                <option value="Sports">Sports</option>
                <option value="Entertainment">Entertainment</option>
                <option value="Health">Health</option>
                <option value="Other">Other</option>
            </select>
        </div>

        <input type="text" value="<%= user.userName %>" name="username" style="display: none;">
        <input type="text" value="<%= user.profile %>" name="profile" style="display: none;">
        <input type="submit" value="submit" id="blog-submit">
    </form>
</div>

<%- include('partials/footer'); -%>